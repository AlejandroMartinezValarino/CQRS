[Unit]
Description=CQRS Command Side API
After=network.target postgresql.service kafka.service
Requires=postgresql.service

[Service]
Type=notify
User=cqrs
Group=cqrs
WorkingDirectory=/opt/cqrs/app
Environment="PATH=/opt/cqrs/venv/bin"
EnvironmentFile=/opt/cqrs/app/.env
ExecStart=/opt/cqrs/venv/bin/uvicorn \
    app.command_side.api.main:app \
    --host 0.0.0.0 \
    --port 8000 \
    --workers 4 \
    --no-access-log
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=cqrs-command

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target

