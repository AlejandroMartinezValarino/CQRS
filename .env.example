# =============================================================================
# Configuración de la Aplicación CQRS
# =============================================================================
# Copia este archivo a .env y ajusta los valores según tu entorno
# cp .env.example .env

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Database - Read Model
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=Molkiu
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cqrs_db
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_COMMAND_TIMEOUT=30

# =============================================================================
# Database - Event Store
# =============================================================================
POSTGRES_EVENT_STORE_DB=cqrs_event_store
POSTGRES_EVENT_STORE_MAX_CONNECTIONS=10
POSTGRES_EVENT_STORE_MIN_CONNECTIONS=2

# =============================================================================
# Kafka
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_EVENTS=anime-events
KAFKA_PRODUCER_RETRIES=3
KAFKA_CONSUMER_GROUP_ID=read-side-consumer-group
KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest
KAFKA_CONSUMER_ENABLE_AUTO_COMMIT=false

# =============================================================================
# API - Command Side
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# =============================================================================
# GraphQL - Read Side
# =============================================================================
GRAPHQL_HOST=0.0.0.0
GRAPHQL_PORT=8001
GRAPHQL_WORKERS=4

# =============================================================================
# Security
# =============================================================================
# Para desarrollo: ["*"]
# Para producción: ["https://tudominio.com"]
ALLOWED_ORIGINS=["*"]

# =============================================================================
# Monitoring
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
